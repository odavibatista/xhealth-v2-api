generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id_user String @id @default(cuid())
  name           String   @db.LongText
  password       String   @db.LongText
  birth_date     String   @db.LongText
  email          String   @unique @db.Char(255)
  phone_number   String   @unique @db.Char(255)
  gym_plan_id   String
  check_privacy  Boolean
  address_id     String @unique
  createdAt     DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  deletedAt DateTime? @map("deleted_at")

  address             Address              @relation(fields: [address_id], references: [id_address])
  user_gym_plan GymPlan @relation(fields: [gym_plan_id], references: [id_gym_plan])
  user_extra_services UserExtraService[]
  login_logs     LoginLog[]
  passwordHistories   PasswordHistory[]

  @@map("users")
}

model LoginLog {
  id            String   @id @default(cuid())
  user_id       String
  ip            String
  login_attempt Int
  is_blocked    Boolean
  updated_at    DateTime @default(now()) @updatedAt
  created_at    DateTime @default(now())

  user User @relation(fields: [user_id], references: [id_user])

  @@map("login_logs")
}
model PasswordHistory {
  id         String @id @default(cuid())
  user_id    String
  password   String   @db.LongText
  created_at DateTime @default(now())

  user User @relation(fields: [user_id], references: [id_user])

  @@index([user_id])
  @@map("password_histories")
}

model UF {
  id_uf      String @id @default(cuid()) @map("id")
  name    String
  acronym String @unique @db.Char(2)
  ibge_id Int    @unique

  addresses    Address[]

  @@unique([name, acronym])
  @@map("ufs")
}

model IbgeCity {
  id            String @id @default(cuid())
  ibge_id       Int
  name          String
  ibge_state_id Int

  @@map("ibge_cities")
}

model Address {
  id_address String @id @default(cuid())
  cep        String?  @db.Char(255)
  street     String?  @db.Char(255)
  number     String?  @db.Char(255)
  complement String?  @db.Char(255)
  city       String?  @db.Char(255)
  uf_id      String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  deletedAt DateTime? @map("deleted_at")

  @@map("addresses")

  uf      UF?      @relation(fields: [uf_id], references: [id_uf])
  user    User?
  gym     Gym?
}

model Gym {
  id_gym String @id @default(cuid())
  name String
  address_id String @unique
  phone_number String @unique
  imageUrl String
  created_by String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  deletedAt DateTime? @map("deleted_at")

  address Address @relation(fields: [address_id], references: [id_address])

  createdBy Administrator @relation(fields: [created_by], references: [id_administrator])
  @@map("gyms")
  @@unique([name, address_id, phone_number])
}

model GymPlan {
  id_gym_plan String @id @default(cuid())
  name String
  description String
  price String
  duration String
  created_by String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  deletedAt DateTime? @map("deleted_at")

  users User[]
  gymPlanFeatures GymPlanFeature[]

  createdBy Administrator @relation(fields: [created_by], references: [id_administrator])
  @@map("gym_plans")
}

model GymPlanFeature {
  id_gym_plan_feature String @id @default(cuid())
  gym_plan_id String
  feature_name String
  created_by String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  deletedAt DateTime? @map("deleted_at")

  gymPlan GymPlan @relation(fields: [gym_plan_id], references: [id_gym_plan])
  createdBy Administrator @relation(fields: [created_by], references: [id_administrator])

  @@map("gym_plan_features")
}

model SportModality {
  id_sport_modality String @id @default(cuid())
  name String
  description String
  imageUrl String
  created_by String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  deletedAt DateTime? @map("deleted_at")

  createdBy Administrator @relation(fields: [created_by], references: [id_administrator])
  @@map("sport_modalities")
}

model Testimony {
  id_testimony String @id @default(cuid())
  personName String
  stars Int
  comment String
  created_by String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  deletedAt DateTime? @map("deleted_at")

  createdBy Administrator @relation(fields: [created_by], references: [id_administrator])
  @@map("testimonies")
}

model Trainer {
  id_trainer String @id @default(cuid())
  name String
  instagramUrl String
  twitterUrl String
  youtubeUrl String
  imageUrl String
  created_by String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  deletedAt DateTime? @map("deleted_at")

  createdBy Administrator @relation(fields: [created_by], references: [id_administrator])
  @@map("trainers")
}

model ExtraService {
  id_extra_service String @id @default(cuid())
  name String
  description String
  price Float
  imageUrl String
  created_by String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  deletedAt DateTime? @map("deleted_at")

  user_extra_services UserExtraService[]
  createdBy Administrator @relation(fields: [created_by], references: [id_administrator])

  @@map("extra_services")
}

model UserExtraService {
  id_user_extra_service String @id @default(cuid())
  user_id String
  extra_service_id String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  deletedAt DateTime? @map("deleted_at")

  user User @relation(fields: [user_id], references: [id_user])
  extra_service ExtraService @relation(fields: [extra_service_id], references: [id_extra_service])

  @@map("user_extra_services")
}

model Administrator {
  id_administrator         String @id @default(cuid())
  email      String        @unique
  name       String        @db.LongText
  password   String        @db.LongText
  role       AdministratorRole
  created_by String?
  created_at DateTime      @default(now())
  updated_at DateTime      @updatedAt

  deletedAt DateTime? @map("deleted_at")

  ExtraService ExtraService[]
  CreatorAdmin Administrator? @relation("CreatorAdmin", fields: [created_by], references: [id_administrator])
  CreatedAdministrators Administrator[] @relation("CreatorAdmin")
  Gym          Gym[]
  SportModality SportModality[]
  Testimony    Testimony[]
  Trainer      Trainer[]
  GymPlan      GymPlan[]
  GymPlanFeatures GymPlanFeature[]
  administrator_permissions AdministratorPermission[]

  @@map("administrators")
}

enum AdministratorRole {
  ADMIN
}

model AdministratorPermission {
  id_administrator_permission String @id @default(cuid())
  administrator_id String @unique

  /* PERMISSÕES */


  /* Academias */
  can_create_gyms Boolean @default(false)
  can_edit_gyms Boolean @default(false)
  can_delete_gyms Boolean @default(false)

  /* Usuários Padrão */
  can_create_users Boolean @default(false)
  can_edit_users Boolean @default(false)
  can_delete_users Boolean @default(false)

  /* Treinadores */
  can_create_trainers Boolean @default(false)
  can_edit_trainers Boolean @default(false)
  can_delete_trainers Boolean @default(false)

  /* Serviços Extras */
  can_create_extra_services Boolean @default(false)
  can_edit_extra_services Boolean @default(false)
  can_delete_extra_services Boolean @default(false)

  /* Modalidades Esportivas */
  can_create_sport_modalities Boolean @default(false)
  can_edit_sport_modalities Boolean @default(false)
  can_delete_sport_modalities Boolean @default(false)

  /* Depoimentos */
  can_create_testimonies Boolean @default(false)
  can_edit_testimonies Boolean @default(false)
  can_delete_testimonies Boolean @default(false)

  /* Planos de Academia */
  can_create_gym_plans Boolean @default(false)
  can_edit_gym_plans Boolean @default(false)
  can_delete_gym_plans Boolean @default(false)
  
  /* Outros Administradores */
  can_create_administrators Boolean @default(false)
  can_edit_administrators Boolean @default(false)
  can_delete_administrators Boolean @default(false)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  deletedAt DateTime? @map("deleted_at")

  administrator Administrator @relation(fields: [administrator_id], references: [id_administrator])

  @@map("administrator_permissions")
}